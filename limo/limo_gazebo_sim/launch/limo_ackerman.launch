<?xml version="1.0"?>
<launch>

    <arg name="robot_namespace" default="/"/>
    <arg name="world_name" default="$(find limo_gazebo_sim)/worlds/limo_track_obstacle.world"/>

    <!-- GUI / RViz 실행 여부 -->
    <arg name="gui" default="true"/>
    <arg name="rviz" default="true"/>

    <env name="GAZEBO_MODEL_PATH" value="$(find limo_gazebo_sim)/models:$(optenv GAZEBO_MODEL_PATH)" />
    
    <!-- Gazebo world 실행 -->
    <include file="$(find gazebo_ros)/launch/empty_world.launch">
        <arg name="world_name" value="$(arg world_name)"/>
        <arg name="paused" value="false"/>
        <arg name="use_sim_time" value="true"/>
        <arg name="gui" value="$(arg gui)"/>
        <arg name="headless" value="false"/>
        <arg name="debug" value="false"/>
    </include>
    
    <!-- LIMO 모델 로드 -->
    <param name="robot_description" command="$(find xacro)/xacro '$(find limo_description)/urdf/limo_ackerman.xacro'
        robot_namespace:=$(arg robot_namespace)" />

    <!-- initial pose -->
    <arg name="x" default="1.9"/>
    <arg name="y" default="-2.185"/>
    <arg name="z" default="0.0"/>
    <arg name="yaw" default="0.0"/>

    <node name="spawn_limo_model" pkg="gazebo_ros" type="spawn_model" args="-x $(arg x)
              -y $(arg y)
              -z $(arg z)
              -Y $(arg yaw)
              -unpause
              -urdf
              -param robot_description
              -model 'limo$(arg robot_namespace)'" />

    <!-- 컨트롤러 설정 -->
    <rosparam file="$(find limo_gazebo_sim)/config/limo_ackerman_control.yaml" command="load"/>

    <!-- 컨트롤러 실행 -->
    <node name="controller_spawner" pkg="controller_manager" type="spawner" 
          respawn="false" output="screen" args="limo_state_controller  
                                limo_fl_steering_hinge_controller limo_fr_steering_hinge_controller"/>
    
    <node name="robot_state_publisher" pkg="robot_state_publisher" type="robot_state_publisher" />

    <!-- RViz 실행 (선택적) -->
    <group if="$(arg rviz)">
        <node name="rviz" pkg="rviz" type="rviz" 
              args="-d $(find limo_description)/rviz/model_display.rviz" 
              launch-prefix="bash -c 'sleep 5; $0 $@'"/>
    </group>

</launch>
